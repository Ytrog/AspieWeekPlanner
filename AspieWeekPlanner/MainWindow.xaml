<Window x:Class="AspieWeekPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AspieWeekPlanner"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Left">
                <!--Here will be the toolbox-->
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <!--Here comes the planning-->
                <StackPanel Orientation="Vertical">
                    <!--Roles and goals-->
                </StackPanel>
                <Grid>
                    <!--Priorities and tasks-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0">Wekelijkse prioriteit</Label>
                    <TextBox Grid.Column="0" Grid.Row="1" Grid.RowSpan="5"></TextBox>
                    <Label Grid.Column="1" Grid.Row="0">Maandag</Label>
                    <Label Grid.Column="2" Grid.Row="0">Dinsdag</Label>
                    <Label Grid.Column="3" Grid.Row="0">Woensdag</Label>
                    <Label Grid.Column="4" Grid.Row="0">Donderdag</Label>
                    <Label Grid.Column="5" Grid.Row="0">Vrijdag</Label>
                    <Label Grid.Column="6" Grid.Row="0">Zaterdag</Label>
                    <Label Grid.Column="7" Grid.Row="0">Zondag</Label>
                </Grid>
            </StackPanel>
        </DockPanel>

    </Grid>
</Window>
