<UserControl x:Class="AspieWeekPlanner.DayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AspieWeekPlanner"
             Name="DayWindow"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="150">
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="100"/>
        </Style>
        <Style TargetType="local:DropSurface">
            <Setter Property="Height" Value="100"/>
            <Setter Property="BorderBrush" Value="#FFABADB3"/>
        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="{Binding Day, ElementName=DayWindow}" Style="{StaticResource Header}" Height="auto"/>
            <Label Style="{StaticResource SubHeader}" >Prioriteit</Label>
            <TextBox Name="tbPriority" Height="150"></TextBox>
            <Rectangle Height="20" Fill="Blue"/>
            <local:DropSurface x:Name="tbMorning"/>
            <local:DropSurface x:Name="tbAfternoon"></local:DropSurface>
            <local:DropSurface x:Name="tbEvening"></local:DropSurface>
        </StackPanel>   
    </Grid>
</UserControl>
